termcapinfo xterm ti@:te@
startup_message off
hardstatus on
vbell off

# Set hardstatus always on
caption always "%{=u .G} %-w%<%{=ub .y}%n %t%{=u .G}%+w "
#hardstatus alwaysignore
#hardstatus alwayslastline "%{= .K} [%l]%<%=%{= .W}@%H %=%{= .y} %Y/%m/%d%{= .m} %0c:%s "
scrollback 10000
defscrollback 10000

escape ^Zz

## 从窗口 1 开始
bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1
